<?xml version="1.0" encoding="ISO-8859-1"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" version="2.5">
  <servlet>
    <servlet-name>LoginPage</servlet-name>
    <servlet-class>servlets.LoginPage</servlet-class>
  </servlet>
  <!-- JSPC servlet mappings start -->

    <servlet>
        <servlet-name>org.apache.jsp.loginpage_jsp</servlet-name>
        <servlet-class>org.apache.jsp.loginpage_jsp</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>org.apache.jsp.welcome_jsp</servlet-name>
        <servlet-class>org.apache.jsp.welcome_jsp</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>org.apache.jsp.loginpage_jsp</servlet-name>
        <url-pattern>/loginpage.jsp</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>org.apache.jsp.welcome_jsp</servlet-name>
        <url-pattern>/welcome.jsp</url-pattern>
    </servlet-mapping>

<!-- JSPC servlet mappings end -->

<servlet-mapping>
    <servlet-name>LoginPage</servlet-name>
    <url-pattern>/welcome</url-pattern>
  </servlet-mapping>
  <welcome-file-list>
    <welcome-file>loginpage.jsp</welcome-file>
  </welcome-file-list>
</web-app>